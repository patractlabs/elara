{
    "name": "elara-stat-dashboard",
    "script": "./dashboard.js",
    "cwd": "./",
    "watch": [
        "./dashboard.js"
    ],
    "ignore_watch": [
        "node_modules",
        "logs"
    ],
    "merge_logs": true,
    "log_date_format": "YYYY-MM-DD HH:mm Z",
    "instances": 1,
    "exec_mode": "cluster_mode",
    "autorestart": true,
    "error_file": "./logs/app-err.log",
    "out_file": "./logs/app-out.log",
    "env": {
        "NODE_ENV": "dev"
    },
    "env_test": {
        "NODE_ENV": "test"
    },
    "env_production": {
        "NODE_ENV": "production"
    }
}